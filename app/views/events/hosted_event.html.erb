<div class="container">
  <h1>Your Hosted Events</h1>
  <div class="d-flex mt-4">
    <div class="calendar-container">
        <%= render "shared/datepicker" %>
    </div>
    <div class="event-list">
      <div class="date">
        <h3>Thursday, November 16</h3>
      </div>


      <% @hosted_events.each_with_index do |hosted_event,i| %>
        <% event = hosted_event %>
        <%= link_to event_path(hosted_event), class:"d-flex flex-column link" do %>
          <div class="event-container">
            <div class="event-first-container">
              <% if event.photo.key.nil? %>
                <img src="https://cdn.britannica.com/34/233234-050-1649BFA9/Pug-dog.jpg" alt="image place holder">
              <% else %>
                <%= cl_image_tag event.photo.key %>
              <% end %>
            </div>
            <div class="event-mid-container d-flex flex-column  justify-content-between">
              <div class="d-flex justify-content-between">
                <h6 class="date-font"><%= event.date %> <%= event.time %></h6>
                <%# <h6 class="dark-font">Suggested</h6> %>
              </div>
              <div>
                <h6 class="dark-font"><strong><%= event.name%></strong></h6>
              </div>
              <div>
                <p class="sub-font"><%= event.category%></p>
              </div>
              <div class="d-flex justify-content-between align-items-center" >
                <h6 class="sub-font"><%= @count[i][:accepted_count] %>/<%= event.spots%> attending</h6>
                <% if @count[i][:pending_count].to_i > 0 %>
                  <h6 class="pending"><%= @count[i][:pending_count] %> pending requests</h6>
                <% else %>
                  <h6><%= @count[i][:pending_count] %> pending requests</h6>
                <% end %>
              </div>
              <%# <div class="attend-delete d-flex justify-content-between">
                <button class="attend-btn"><i class="fa-solid fa-circle-check"></i> Attending</button>
              </div> %>
            </div>
          </div>
        <% end %>
        <%# <%= link_to event.name, event_path(event), class:"d-flex flex-column" %>
      <% end %>
    </div>
  </div>
</div>
