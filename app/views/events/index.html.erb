  <% if user_signed_in? %>
    <h1 id="header-font">Welcome, <%= current_user.first_name %> ðŸ‘‹</h1>
  <% end %>
  <div class="d-flex mt-4">
    <div class="calendar-container" >
      <%# <div id="calendar">
        my calendar
      </div> %>
      <%# <div class="flatpickr" data-controller="datepicker" >
        <input type="text" placeholder="Select Date.." data-input data-datepicker-target ="datePicker"> <!-- input is mandatory -->
